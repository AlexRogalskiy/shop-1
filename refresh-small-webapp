#!/bin/sh
#
# Refresh the stack based on local changes.
#

# Abort on first error.
set -e

PROGNAME="${0##*/}"
PROGDIR="${0%/*}"
cd "${PROGDIR}"

# Some simple steps:
# 1. Build everything (docker containers).
# 2. "up" the stack, which will restart changed images.
docker-compose -f docker-compose-simple-webapp.yml build
docker-compose -f docker-compose-simple-webapp.yml up --detach
